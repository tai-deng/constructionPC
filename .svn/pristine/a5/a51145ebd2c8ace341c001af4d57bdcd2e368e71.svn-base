            }],
          },
          isNewadd:false,
          time:0
        }
      ], 
    }
  },
  methods: {
    submitForm(formName) {
      this.$refs[formName].validate((valid) => {
        if (valid) {
          alert('submit!');
        } else {
          console.log('error submit!!');
          return false;
        }
      });
    },
    // resetForm(formName) {
    //   this.$refs[formName].resetFields();
    // },
    // 删除新增的input框
    removeDomain(item,dom) {
      var index = item.dynamicValidateForm.domains.indexOf(dom)
      if (index !== -1) {
        item.dynamicValidateForm.domains.splice(index, 1)
      }
      item.time--
      console.log("删除次数",item.time)
    },
    // 新增input框
    addDomain(obj) {
      console.log(obj)
      obj.time++
      if(obj.time>1){
        obj.dynamicValidateForm.domains.push({
          value: '',
          key: Date.now()
        });
      }
      obj.isNewadd = true
      console.log("增加次数",obj.time)
    }
  }
}

</script>
