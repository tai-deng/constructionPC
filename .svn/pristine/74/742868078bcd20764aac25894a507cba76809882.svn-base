
<template>
  <div class='particularModify-container'>
    <div class="modify_content">
      <label>
        桩身检测工期:
        <input type="number" v-model="data.cValue">
      </label>
      <span>天</span>
    </div>
    <div class="modify_commit" @click="saveDta">
      <span>保存</span>
    </div>
  </div>
</template>

<script type='textecmascript-6'>
import {GetSpecialAdjustmentInfo,EditSpecialAdjustment} from '../../../../api/api.js'

export default {
  data() {
    return {
      projectid: localStorage.getItem("projectid"),
      data:{ID:'',cValue:''}
    };
  },
  created(){
    this.getData();
  },
  methods: {
    // 获取数据
    getData(){
      GetSpecialAdjustmentInfo({Projectid:this.projectid}).then(res=>{
        if(res.StatusCode==200){
          this.data= res.Detiel[0];
        }
      })
    },
    // 保存数据
    saveDta(){
      if(sessionStorage.getItem('menuType') !== "2"){
        this.$message({
        type: "warning",
        message: "您没有权限操作",
        center: "true"
        });
        return;
      }
      let par= Object.assign(this.data,{Projectid:this.projectid})
      EditSpecialAdjustment(par).then(res=>{
        if(res.StatusCode==200){
          this.$message({ type: 'success', message: res.Message, center: 'true' })
        }
      })
    }
  }
};
</script>
