                <el-option
                  v-for="item in selectmanList"
                  :key="item.id"
                  :label="item.text"
                  :value="Number(item.id)"
                ></el-option>
              </el-select>
            </el-form-item>
             <el-form-item label="状态" prop="States" v-if="!isAdd">
