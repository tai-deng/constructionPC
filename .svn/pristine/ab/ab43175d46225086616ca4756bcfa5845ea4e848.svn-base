  props: {
    dataNameList: {
      type: Array,
      default: function() {
        return ["", ""];
      }
    },
    dataList: {
      type: Array,
      default: function() {
        return [];
      }
    },
    loader: {
      type:Boolean,
      default: false
    }
  },
  methods: {
    //双击修改数值
    isChange(e) {
      console.log(e)
      let attDisabled = e.target.attributes.disabled;
      if (attDisabled) {
        e.target.removeAttribute("disabled");
      }
    },
    delData(id) {
      console.log(id);
      let arr = [];
      arr = this.dataList.filter(i => {
        return i.id !== id;
      });
      console.log(arr);
      this.dataList = arr;
      // return
    }
  }
};
