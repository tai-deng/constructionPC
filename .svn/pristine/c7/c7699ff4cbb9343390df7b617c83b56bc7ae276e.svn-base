    selectCity(id){
      //根据ID查市名
      let city = this.cityList.filter(i=>i.id==id)
      // console.log(city)
      this.formData.City = city[0].text
      //定位地图
      this.centerAndZoomByAddress(this.formData.City, this.map, 12);
      return new Promise(async  resolve=>{
        console.log(id)
        this.formData.CityId = Number(id)
        this.formData.Country = ''
        this.formData.CountryId = 0
        this.CountryList = await infaces(this, GetCountryList, { id });
        resolve(this.CountryList)
      })
    },
