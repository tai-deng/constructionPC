    <!-- 项目组织框架图 -->
    <div class="organ_all_img">
      <div class="collabora_title">Step3.3 项目组织架构图</div>
      <div class="organ_all_img_body">
        <vo-basic
          v-if="isShowVoB"
          ref="chart"
          :data="chartData"
          :export-button="true"
          exportButtonName="下载"
          export-filename="testpic"
          :pan="true"
          :zoom="true"
        ></vo-basic>

    
      </div>
