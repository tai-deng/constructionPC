<script type='textecmascript-6'>
import { GetCycleMessageInfo, SubCycleMessage, AddColor } from "@/api/api.js";
export default {
  data() {
    return {
      isOK: false,  //输入的偏差率是否正确
      currentList: 1, //currentList为1-周期管理，为2-颜色管理
      listModuel: 1, //listModuel为1-节点对比，为2-三算对比，为3-施工日志
      listTitle: "节点对比",
      //周期管理
      cycleInput: 1, //输入框
      cycleTextarea: "", //内容
      //三算颜色管理
      colorList: [
        {
          Operator: "=",
          DiffRate: "",
          EndOperator: "=",
          EndDiffRate: "",
          ColorName: "#59FF40",
          ProjectID: localStorage.getItem("projectid"),
          iCreator: localStorage.getItem("userid"),
          dCreateTime: require("moment")(new Date()).format("YYYY-MM-DD")
        }
      ],
      //三算颜色管理--比较大小
      numberList: [
        { value: "=", label: "=" },
        { value: ">", label: ">" },
        { value: "≥", label: "≥" }
      ],
      numberMaxList: [
        { value: "=", label: "=" },
        { value: "<", label: "<" },
        { value: "≤", label: "≤" }
      ]
    };
  },
  created() {
    this.getInfo(); //周期管理
  },
  methods: {
    //点击切换页面（周期消息/颜色管理）
    jumpList(n) {
      this.currentList = n;
    },
    //点击切换周期消息中的表格（节点对比/三算对比/施工日志）--表格头部文字变换-并清空表格中的数据
    jumpLi(n) {
      this.listModuel = n;
      this.cycleInput = 1;
      this.cycleTextarea = "";
      this.getInfo();
      if (n == "1") {
        this.listTitle = "节点对比";
      } else if (n == "2") {
        this.listTitle = "三算对比";
      } else if (n == "3") {
        this.listTitle = "施工日志";
      }
    },
    //周期消息--保存按钮  SubCycleMessage
    saveDay() {
      if (this.cycleTextarea == "" || this.cycleInput == "") {
        this.$message("周期消息中的" + this.listTitle + "信息没有填写完整");
        return false;
      }
      // this.load();
      var post = {
        CycleType: parseInt(this.listModuel),
        CycleDay: this.cycleInput,
        Contents: this.cycleTextarea
      };
      this.Request(SubCycleMessage(post)).then(res => {
        console.log(res);
        if (res.StatusCode == 200) {
          this.$message({
            type: "success",
            message: res.Message,
            center: "true"
          });
        } else {
          this.$message({
            type: "error",
            message: res.Message,
            center: "true"
          });
        }
        this.$toast.clear();
      });
    },
    //三算颜色管理
    addColor() {
      let text = {
        Operator: "=",
        DiffRate: "",
        EndOperator: "=",
        EndDiffRate: "",
        ColorName: null,
        ProjectID: localStorage.getItem("projectid"),
        iCreator: localStorage.getItem("userid"),
        dCreateTime: require("moment")(new Date()).format("YYYY-MM-DD")
      };
      this.colorList.push(text);
    },
    //三算颜色管理 AddColor
    saveColor() {
      for (var i = 0; i < this.colorList.length; i++) {
        if (this.colorList[i].ColorName == null) {
          this.$message({
            type: "error",
            message: "颜色不能为空",
            center: "true"
          });
          return false;
        }
        if(this.colorList[i].DiffRate > this.colorList[i].EndDiffRate){
          this.$notify.error({
            title: '错误',
            message: '输入的值不正确'
          });
          return false;
        }
        // this.colorList[i].ProjectID=localStorage.getItem('projectid');
        // this.colorList[i].iCreator=localStorage.getItem('user');
        // this.colorList[i].dCreateTime=require('moment')(new Date()).format('YYYY-MM-DD')
      }
      if(!this.isOK){
        this.$notify.error({
          title: '错误',
          message: '输入的值不正确'
        });
        return false;
      }
      // this.load();
      this.Request(AddColor(this.colorList)).then(res => {
        if (res.StatusCode == "200") {
          this.$message({
            type: "success",
            message: res.Message,
            center: "true"
          });
        } else {
          this.$message({
            type: "error",
            message: res.Message,
            center: "true"
          });
        }
        // this.$toast.clear();
      });
    },
    //三算颜色管理--删除颜色
    delColor(item, index) {
      // console.log(item);
      // console.log(index);
      this.colorList.splice(index, 1);
    },
    //获取周期信息
    getInfo() {
      // this.load();
      this.Request(GetCycleMessageInfo({ CycleType: this.listModuel })).then(
        res => {
          if (res.StatusCode == "200") {
            this.cycleInput = res.Detiel[0].CycleMessageInfo.CycleDay;
            this.cycleTextarea = res.Detiel[0].CycleMessageInfo.Contents;
          } else {
            this.$message({
              type: "error",
              message: res.Message,
              center: "true"
            });
          }
          // this.$toast.clear();
        }
      );
    },
    /**
     * 最小值输入框的值发生变化时触发
     */
    minChange(currentValue, beforeValue){
      let minArr, maxArr, maxs = [], maxv = 0
      minArr = this.$refs.min
      maxArr = this.$refs.max
      maxArr.forEach(element => {
        maxs.push(element.value)
      })
      maxv = Math.max(...maxs)
      if(currentValue < maxv){
        this.isOK = false;
        this.$notify.error({
          title: '错误',
          message: '输入的值不正确'
        });
      }else{
        this.isOK = true;
      }
    },
    /**
     * 最大值输入框的值发生变化时触发
     */
    maxChange(currentValue, beforeValue){
      let minArr, mins = [], minv = 0
      minArr = this.$refs.min
      minArr.forEach(element => {
        mins.push(element.value)
      })
      minv = Math.max(...mins)
      if(currentValue <= minv){
        this.isOK = false;
        this.$notify.error({
          title: '错误',
          message: '输入的值不正确'
        });
      }else{
        this.isOK = true;
      }
    }
  }
};
</script>
