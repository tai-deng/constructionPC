          <el-row>
            <el-col :span="10" class="cycle_right_align cycle_right_align_change">
              <img
                class="cycle_right_img"
                src="../../../assets/imgs/gantt-add-a.png"
                @click="addColor()"
                alt
              >
              偏差率(%)
            </el-col>
            <el-col :span="12" :offset="2" class="cycle_right_align">表示颜色</el-col>
          </el-row>
        </div>
        
        <div class="cycle_right_body_color">
          <ul>
            <li v-for="(item , index) in colorList" v-bind:key="index">
              <el-row>
                <el-col :span="8" class="cycle_right_align">
                  <el-select v-model="item.Operator" style="width:60px;">
                    <el-option
