              <el-select v-model="workForm.prjMgr" placeholder="请选择" style="width:100%;">
                <el-option
                  v-for="item in selectPeopleList"
                  :key="item.id"
                  :label="item.text"
                  :value="Number(item.id)"
                ></el-option>
              </el-select>
            </el-form-item>
